#!pip install datasets

from datasets import load_dataset
from huggingface_hub import notebook_login

naiive_dataset = load_dataset("Hamid-reza/small-persian-QA")

def replace_invisible_char(element):
  _ = element['context'].replace(' ','â€Ž ')
  element['context'] = _
  return element

invisibled_dataset = naiive_dataset.map(replace_invisible_char)

# login to huggingface and push our Adv-small-persian-QA to it
notebook_login()

invisibled_dataset.push_to_hub("jalalnb/invisible_char_on_small_persian_QA")
